{
  "name": "react-typescript-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:types": "tsc --noEmit",
    "lint:staged": "lint-staged",
